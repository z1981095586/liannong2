page {
  background: #f5f5f5;
}

.tabBar {
  width: 90%;
  padding-left: 5%;
  padding-right: 5%;
  height: 80rpx;
  background: #fff;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
}
.stickyClass{
    position: sticky !important;
    top: 0rpx;
    z-index: 999;
}
.tab-item {
  /* display: inline-block; */
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
      z-index: 999;
}

.active {
  border-bottom: 3rpx solid #ff3434;
  color: #ff3434;
}

.goodsHead{
   width: 94%;
  margin-left: 3%;
  background: rgb(240, 239, 239);
  border-radius: 20rpx;
  margin-top: 20rpx;
    margin-bottom: 20rpx;
  padding-bottom: 30rpx;
  position: relative;
}

.goods{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  height: 200rpx;
  position: relative;
  display: flex;
  margin-top:30rpx;
  align-items: center;
}

.goods_image{
  width: 200rpx;
  height: 200rpx;
  background-color: forestgreen;
  border-radius: 20rpx;
}
.goods-content{
  width: 60%;
  margin-left: 40rpx;
}
.goods-content .title{
  font-size: 40rpx;
  color: #000;
}
.goods-content .number{
  font-size: 30rpx;
  color: #8e8e8e;
}
.shopBar{
width: 100%;
}
.shop{
height: 100rpx;
border-bottom: 1rpx  solid #a3a2a2;
display: flex;
align-items: center;
}
.shop-image{
 height: 80rpx;
 width: 80rpx;
 border-radius: 50%;
 background-color: red;
}
.shop-name{
  margin-left: 20rpx;
  font-size: 30rpx;
}
