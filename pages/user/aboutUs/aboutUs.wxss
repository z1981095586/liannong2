.content{
  font-size: 30rpx;
}
/*总菜单容器*/
.menu {display: block;height: 38px;}
/*一级菜单*/
.menu dt {
   font-size: 15px;
   float:left;
   display: block;
   width: 100%;
   height: 38px;
   border-right: 1px solid #d2d2d2;
   border-bottom: 1px solid #d2d2d2; 
   text-align: left;
   background-color: #f4f4f4; 
   color: #5a5a5a;line-height: 38px;
}
/*二级菜单外部容器样式*/
.menu dd{ position: absolute;width: 100%;top:100px; left:0;z-index:999;display:block}
/*二级菜单普通样式*/
.menu li{
   font-size: 14px; line-height: 34px;color: #575757;height: 34px;display: block;padding-left: 8px;
   background-color: #fff;border-bottom: 1px solid #dbdbdb;
}
.show {
  display: block;
} 
.hidden{
  display:none;
}