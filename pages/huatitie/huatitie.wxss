/* pages/fatie/fatie.wxss */
page {
  width: 100%;
  height: 100%;
   background-color:white;
}
.fatie-page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.title{
  width: 100%;
  height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.title input{
width: 96%;
height: 50%;
font-size: 35rpx;
margin-left: 10rpx;


}
.content{
  width: 100%;
  height: 600rpx;
    font-size: 30rpx;
}
.content textarea{
  margin-left: 10rpx;
   width: 100%;
  height: 65%;
  word-break:break-all;
}
.bottom{
  width: 100%;
  height: 150rpx;
  border-top: 1px solid rgba(0, 0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.btn{
  width: 25%;
  height: 35%;
  background:#87CEFA;
  color: white;
  margin-right: 15rpx;

  float: right;
  font-size: 33rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
}
