/* pages/search/search.wxss */ 
.search-conten{
  width: 100%;
  height: 100%;

}
.search-heard{
  width: 100%;
  height: 100rpx;
  background: white;
  border-bottom: 1px solid #FAFAFA;
  display: flex;
  align-items:center;
}
.left{
  width: 82%;
  height: 50rpx;
  background: #F5F5F5;
  border-radius: 100rpx;
  padding:5rpx;
  margin-left: 5%;
}

.left icon{
  float: left;
  margin-left: 10rpx;
  margin-top:12rpx;
  margin-right: 10rpx;
}
.left input{
  background: #F5F5F5;
  font-size: 23rpx;
  color: #585858;
  width: 80%;
}
.right{
  margin-right: 5%;
  margin-left: 2%;
  width: 18%;
  height: 50rpx;
  background: #ef696c;
  display: flex;
  align-items:center;
  justify-content: center;
  border-radius: 5rpx;
}
.right label{
  color: white;
  font-size: 23rpx;
}
.search-bottom{
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  
}
.search-bottom-heard{
  width: 100%;
  height: 50rpx;
 
}
.bottom-left{
  margin-left: 5%;
  font-size: 30rpx;
}
.bottom-right{
  float: right;
  margin-right: 10px;
  font-size: 12px;
  color: #E3412C;
}
.search-bottom-bottom{
  display: flex;
  flex-wrap: wrap;
}
.search-bottom-text{
  font-size: 25rpx;
  background:#F5F5F5;
  color: #585858;
  padding: 10rpx 20rpx;
  margin-left: 5%;
  margin-top: 10rpx;
  border-radius: 10rpx;
}

