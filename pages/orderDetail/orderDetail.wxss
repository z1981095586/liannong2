page {
  background: #f5f5f5;
}
.order-head{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  height: 50rpx;
  position: relative;
  display: flex;
  border-bottom: 1px solid rgba(192, 192, 192, 0.2);
}
.order-head-img {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: 3%;
}

.order-head-mes {
  width: 60%;
}

.order-head-nickname {
  font-size: 30rpx;
  /* color: #585858; */
  margin-left: 30rpx;
  margin-top: 5rpx;
 font-weight: bold;
}


.order-head-goodsWay {
  color: #a7a7a7;
  position: absolute;
  right: 3%;
  top: 20rpx;
  font-size: 23rpx;
}

.order-mes {
  display: flex;
  position: relative;
}

.order-mes-img {
  width: 24%;
  margin-left: 3%;
  margin-bottom: 5rpx;
  height: 150rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.orderTitle {
  width: 30%;
  margin-top: 20rpx;
  margin-left: 3%;
  margin-right: 3%;
  font-size: 25rpx;
}

.orderTitle-text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.tradingWay {
  width: 60rpx;
  margin-top: 20rpx;
  padding: 2rpx 5rpx;
  font-size: 23rpx;
  line-height: 30rpx;
  text-align: center;
  background: #fff2eb;
  color: #ec5c1c;
}

.orderPrice {
  position: absolute;
  font-size: 25rpx;
  top: 40rpx;
  right: 3%;
}

.orderNum {
  position: absolute;
  font-size: 25rpx;
  top: 80rpx;
  right: 3%;
  color: #bababa;
}

.orderTotalPrice {
  height: 50rpx;
  width: 100%;
  position: relative;
}
.orderList {
  width: 94%;
  margin-left: 3%;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
    margin-bottom: 20rpx;
  padding-bottom: 30rpx;
  position: relative;
}
.orderSum{
 position: absolute;
  line-height: 50rpx;
  left: 3%;
  font-size: 28rpx;
}
.orderTotalPrice-text {
  position: absolute;
  line-height: 50rpx;
  right: 3%;
  font-size: 28rpx;
  color: #ef696c;
}
.peisong{
  width: 94%;
  margin-left: 3%;
 margin-top: 50rpx;
 font-size: 30rpx;
 height: 350rpx;
 background-color: #fff;
  border-radius: 20rpx;
}

.peisong-title{
  width: 60%;
  font-size: 30rpx;
  margin-left: 30rpx;
  margin-top: 5rpx;
 font-weight: bold;
 
}
.peisong-item{
  height: 40rpx;
  display: flex;
  margin-top: 40rpx;
}
.itemTitle{
  margin-left: 20rpx;
}
.itemMes{
  position: absolute;
  right: 40rpx;
}