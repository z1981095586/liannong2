page {
  background: #f5f5f5;
}

.tabBar {
  width: 90%;
  padding-left: 5%;
  padding-right: 5%;
  height: 80rpx;
  background: #fff;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
}
.stickyClass{
    position: sticky !important;
    top: 0rpx;
    z-index: 999;
}
.tab-item {
  /* display: inline-block; */
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
      z-index: 999;
}

.active {
  border-bottom: 3rpx solid #ff3434;
  color: #ff3434;
}

.orderList {
  width: 94%;
  margin-left: 3%;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
    margin-bottom: 20rpx;
  padding-bottom: 30rpx;
  position: relative;
}

.order-head {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  height: 80rpx;
  position: relative;
  display: flex;
}

.order-head-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 3%;
}

.order-head-mes {
  width: 60%;
}

.order-head-nickname {
  font-size: 25rpx;
  color: #585858;
  margin-left: 20rpx;
  margin-top: 5rpx;
  font-weight: bold;
}

.order-head-pos {
  font-size: 23rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  color: #a7a7a7;
  line-height: 30rpx;
}

.order-head-goodsWay {
  color: #ef696c;
  position: absolute;
  right: 3%;
  top: 20rpx;
  font-size: 23rpx;
}

.order-mes {
  display: flex;
  position: relative;
}

.order-mes-img {
  width: 24%;
  margin-left: 3%;
  margin-bottom: 5rpx;
  height: 150rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.orderTitle {
  width: 50%;
  margin-top: 20rpx;
  margin-left: 3%;
  margin-right: 3%;
  font-size: 25rpx;
}

.orderTitle-text {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.tradingWay {
  width: 60rpx;
  margin-top: 20rpx;
  padding: 2rpx 5rpx;
  font-size: 23rpx;
  line-height: 30rpx;
  text-align: center;
  background: #fff2eb;
  color: #ec5c1c;
}

.orderPrice {
  position: absolute;
  font-size: 25rpx;
  top: 20rpx;
  right: 3%;
}

.orderNum {
  position: absolute;
  font-size: 25rpx;
  top: 60rpx;
  right: 3%;
  color: #bababa;
}

.orderTotalPrice {
  height: 50rpx;
  width: 100%;
  position: relative;
}

.orderTotalPrice-text {
  position: absolute;
  line-height: 50rpx;
  right: 3%;
  font-size: 28rpx;
  color: #ef696c;
}

.orderBtn {
  height: 54rpx;
  width: 100%;
  position: relative;
}

.order-all {
  position: absolute;
  display: flex;
  margin-top: 15rpx;
  right: 3%;
}

.btn-cancelOrder {
  border: 1rpx solid #999;
  padding: 5rpx 20rpx;
  margin-left: 20rpx;
  border-radius: 25rpx;
  color: #999;
  font-size: 25rpx;
}

